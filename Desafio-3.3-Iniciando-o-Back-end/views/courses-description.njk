{% block content %}

    <div id="wrapper">
        <h1 class="title">{{item.title}}</h1>
    </div>

    <section class="video">

        <div class="card" id="{{item.id}}">
            <div class="card__content">
                <p>
                    {{item.description}}
                </p>
            </div>
            <div class="card__info">
                <p>{{item.duration}}</p>
                <a href="/videos?id={{item.id}}">
                    <p class="card__price">{{item.price}}
                        Assista Agora</p>
                </a>
            </div>
        </div>

        <div>

            <img src="https://img.youtube.com/vi/{{item.id}}/hqdefault.jpg" alt="Imagem de {{item.title}}"/>

        </div>

    </section>

{% endblock %}