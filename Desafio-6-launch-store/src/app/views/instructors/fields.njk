<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="https://" value="{{ instructor.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>Instrutor</div>
    <div>
        <input type="text" name="name" placeholder="Nome do instrutor" value="{{ instructor.name }}">

    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ instructor.birth }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <select name="educational_level">
        <option value="Ensino Médio Completo" {% if instructor.educational_level == 'Ensino Médio Completo' %} selected="selected" {% endif %}>Ensino Médio Completo</option>
        <option value="Ensino Superior Completo" {% if instructor.educational_level == 'Ensino Superior Completo' %} selected="selected" {% endif %}>Ensino Superior Completo</option>
        <option value="Mestrado" {% if instructor.educational_level == 'Mestrado' %} selected="selected" {% endif %}>Mestrado</option>
        <option value="Doutorado" {% if instructor.educational_level == 'Doutorado' %} selected="selected" {% endif %}>Doutorado</option>
    </select>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input type="radio" name="gender" value="M" {% if instructor.gender == 'M' %} checked="checked" {% endif %}>Masculino</span>
        <span>
            <input type="radio" name="gender" value="F" {% if instructor.gender == 'F' %} checked="checked" {% endif %}>Feminio

        </span>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span><input type="radio" name="class_type" value="Presencial" {% if instructor.class_type == 'Presencial' %} checked="checked" {% endif %}>Presencial</span>
        <span><input type="radio" name="class_type" value="distancia" {% if instructor.class_type == 'distancia' %} checked="checked" {% endif %}>À distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="services" placeholder="Separe as matérias com uma virgula" value="{{ instructor.services }}">
    </div>
</div>
<button type="submit">Salvar</button>