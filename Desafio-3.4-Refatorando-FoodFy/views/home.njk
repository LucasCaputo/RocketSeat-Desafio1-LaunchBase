{% extends "layout.njk" %}

{% block content %}

    <div class="banner">
        <div class="banner-content">
            <h1 class="title-large">{{data.title}}</h1>
            <h3 class="subtitle-large">
                {{data.description}}
            </h3>
        </div>
        <img class="img-banner" src="/assets/chef-Foodfy.png" alt="Foodfy"/>
    </div>

    <div class="content">
        <h3 class="title-medium center">Mais Acessadas</h3>

        <div class="cards">

            {% for receita in receitas %}
                <a href="#">
                    <img src="{{receita.image}}" alt="{{receita.title}}"/>
                    <h4 class="title-small">{{receita.title}}</h4>
                    <p class="subtitle-small">por
                        {{receita.by}}</p>
                </a>

            {% endfor %}
        </div>
    </div>
{% endblock %}