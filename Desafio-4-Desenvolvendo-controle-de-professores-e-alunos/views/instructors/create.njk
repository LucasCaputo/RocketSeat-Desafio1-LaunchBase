{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/9021218/800x800) no-repeat center center "></section>
        <section class="details">
            <h3>
                Novo Instrutor
            </h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="https://">
                </div>
            </div>

            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do instrutor">

                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <select name="educational_level">
                    <option value="Ensino Médio Completo">Ensino Médio Completo</option>
                    <option value="Ensino Superior Completo">Ensino Superior Completo</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
                </select>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="class_type" value="Presencial" checked="checked">Presencial</span>
                    <span><input type="radio" name="class_type" value="distancia">À distância</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div><input type="text" name="services" placeholder="Separe as matérias com uma virgula"></div>
            </div>
            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}