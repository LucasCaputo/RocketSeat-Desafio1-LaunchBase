{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/recipes/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Receita</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for recipe in recipes %}
                    <tr>
                        <td><span style="background-image: url({{recipe.avatar_url}})"></span>{{recipe.name}}</td>
                        <td>{{recipe.services}}</td>
                        <td><a href="/recipes/{{recipe.id}}">Ver</a></td>
                    </tr>
                {% endfor %}
              
            </tbody>
        </table>
    </div>
{% endblock content %}