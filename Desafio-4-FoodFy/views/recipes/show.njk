{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{recipe.avatar_url}}) no-repeat center center"></section>
        <section class="details">
            <h3>
                Detalhes
            </h3>
            <div class="item date">
                <div>Desde</div>
                <div>{{recipe.created_at}}</div>
            </div>
            
            <div class="item">
                <div>Nome do Prato</div>
                <div>{{recipe.name}}</div>
            </div>

            <div class="item">
                <div>Descrição do Prato</div>
                <div>{{recipe.description}}</div>
            </div>

            <div class="item">
                <div>Tempo de Preparo</div>
                <div>{{recipe.duration}}</div>
            </div>

            <div class="item">
                <div>Preço</div>
                <div>{{recipe.price}}</div>
            </div>

            <div class="item">
                <div>Chef</div>
                <div>{{recipe.chef}}</div>
            </div>

            <a href="/recipes/{{recipe.id }}/edit" class="button">Editar</a>
            
        </section>
    </div>
{% endblock content %}